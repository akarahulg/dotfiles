#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
        1) setsid -w -f "$TERMINAL" -e alsamixer; pkill -RTMIN+10 "${STATUSBAR:-wibar}" ;;
        2) amixer set Master toggle ;;
        4) amixer set Master 1%+ ;;
        5) amixer set Master 1%- ;;
        3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
        6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(amixer get Master | grep -oP '\[.*?%\]' | head -1 | tr -d '[]%')"
mute="$(amixer get Master | grep -oP '\[on\]|\[off\]' | head -1)"

# If muted, print ðŸ”‡ and exit.
[ "$mute" = "[off]" ] && echo ðŸ”‡ && exit

case 1 in
        $((vol >= 70)) ) icon="ðŸ”Š" ;;
        $((vol >= 30)) ) icon="ðŸ”‰" ;;
        $((vol >= 1)) ) icon="ðŸ”ˆ" ;;
        * ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"
